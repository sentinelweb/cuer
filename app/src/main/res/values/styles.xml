<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:popupMenuStyle">@style/ContextMenu</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:popupMenuStyle">@style/ContextMenu</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemView" />

    <style name="ItemView.TopText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemView.BottomText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContextMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/popup_menu_text</item>
        <item name="android:iconTint">@color/popup_menu_icon_tint</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/grey_800</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.App" />

    <style name="TextAppearance.App.CollapsingToolbar" />

    <style name="TextAppearance.App.CollapsingToolbar.Expanded">
        <item name="android:background">@color/purple_300</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed">
        <item name="android:background">@color/orange_500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>

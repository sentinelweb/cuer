<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    >

    <!-- fixme something is very wrong with the way this work in a dialog - in pix3a the height goes to nothing with match_parentT -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pdf_swipe"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toTopOf="@id/pdf_add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pdf_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.playlists.PlaylistsFragment"
            tools:listitem="@layout/view_playlists_item"
            />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pdf_add_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        app:iconGravity="textStart"
        android:drawableTint="@color/button_fg_tint"
        android:elevation="@dimen/button_elevation"
        android:text="@string/playlist_dialog_add_playlist"
        android:textAppearance="?attr/textAppearanceButton"
        app:icon="@drawable/ic_button_add_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        tools:text="Add"
        />

    <Button
        android:id="@+id/pdf_pin_selected_button"
        style="@style/Button.IconOnly"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="4dp"
        android:visibility="visible"
        app:icon="@drawable/ic_push_pin_on_24"
        app:layout_constraintBaseline_toBaselineOf="@id/pdf_add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?colorPrimary"
        tools:text="Add"
        />

    <Button
        android:id="@+id/pdf_pin_unselected_button"
        style="@style/Button.IconOnly"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:icon="@drawable/ic_push_pin_off_24"
        app:layout_constraintBaseline_toBaselineOf="@id/pdf_add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?colorPrimary"
        tools:text="Add"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
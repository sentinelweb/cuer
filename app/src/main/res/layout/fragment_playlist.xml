<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/playlist_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_header_height_playlist"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/playlist_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.ActionBar.Collapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="28dp"
            app:expandedTitleMarginEnd="16dp"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.ActionBar.Expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways"
            app:statusBarScrim="?attr/colorPrimaryDark"
        >

            <ImageView
                android:id="@+id/playlist_header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:background="@color/background"
                android:transitionName="@string/playlist_trans_image"
                tools:src="@drawable/im_test_nietzche"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                />

            <View
                android:id="@+id/playlist_action_bg"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:background="@drawable/actionbar_gradient"
                />

            <TextView
                android:id="@+id/playlist_items"
                style="@style/Header.InfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash"
                tools:text="800"
                />

            <LinearLayout
                android:id="@+id/playlist_flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="84dp"
                android:background="@color/info_text_overlay_background"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                tools:text="800"
                >

                <ImageView
                    android:id="@+id/playlist_flag_default"
                    android:layout_width="@dimen/flag_size"
                    android:layout_height="@dimen/flag_size"
                    android:contentDescription="@string/default_playlist"
                    android:padding="2dp"
                    android:src="@drawable/ic_playlist_default"
                    android:visibility="gone"
                    app:tint="@color/white"
                    />

                <ImageView
                    android:id="@+id/playlist_flag_play_start"
                    android:layout_width="@dimen/flag_size"
                    android:layout_height="@dimen/flag_size"
                    android:contentDescription="@string/playlist_play_items_from_start"
                    android:padding="2dp"
                    android:src="@drawable/ic_play_start_black"
                    android:visibility="gone"
                    app:tint="@color/white"
                    />

                <ImageView
                    android:id="@+id/playlist_flag_pinned"
                    android:layout_width="@dimen/flag_size"
                    android:layout_height="@dimen/flag_size"
                    android:contentDescription="@string/menu_pin"
                    android:padding="2dp"
                    android:src="@drawable/ic_push_pin_on"
                    android:visibility="gone"
                    app:tint="@color/white"
                    />

                <TextView
                    android:id="@+id/playlist_flag_children"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/flag_size"
                    android:drawablePadding="2dp"
                    android:gravity="top"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.App.Caption"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_tree_flag_20"
                    app:drawableTint="@color/white"
                    tools:text="3"
                    />

            </LinearLayout>

            <View
                android:id="@+id/playlist_title_bg"
                android:layout_width="match_parent"
                android:layout_height="64sp"
                android:layout_gravity="bottom"
                android:background="@color/black_transparent_background"
                />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/playlist_toolbar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                android:transitionName="@string/playlist_trans_title"
                app:menu="@menu/playlist_actionbar"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <uk.co.sentinelweb.cuer.app.ui.common.views.swiperefresh.SwipeRefreshLayout
        android:id="@+id/playlist_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.playlist.PlaylistFragment"
            tools:listitem="@layout/view_playlist_row"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb" />

    </uk.co.sentinelweb.cuer.app.ui.common.views.swiperefresh.SwipeRefreshLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playlist_empty"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:text="@string/playlist_empty"
        android:textAppearance="@style/TextAppearance.App.Headline2"
        android:textColor="@color/grey_500"
        android:visibility="gone"
        app:layoutManager="LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.playlist.PlaylistFragment"
        tools:listitem="@layout/view_playlist_row"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playlist_fab_up"
        style="@style/FabButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/playlist_fab_up_contentdesc"
        app:fabSize="mini"
        app:layout_anchor="@+id/playlist_fab_down"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:srcCompat="@drawable/ic_button_up_black"
        android:visibility="gone"
        android:alpha="@dimen/fab_navigation_alpha"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playlist_fab_down"
        style="@style/FabButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/playlist_fab_down_contentdesc"
        app:fabSize="mini"
        app:layout_anchor="@+id/playlist_fab_refresh"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:srcCompat="@drawable/ic_button_down_black"
        android:visibility="gone"
        android:alpha="@dimen/fab_navigation_alpha"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playlist_fab_refresh"
        style="@style/FabButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/nav_fragment_fab_bottom_offset"
        android:contentDescription="@string/playlist_fab_refresh_contentdesc"
        app:fabSize="mini"
        app:layout_anchor="@+id/playlist_swipe"
        app:layout_anchorGravity="bottom|right"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:srcCompat="@drawable/ic_refresh"
        android:visibility="gone"
        android:alpha="@dimen/fab_navigation_alpha"
        />

    <uk.co.sentinelweb.cuer.app.ui.common.views.FABProgress
        android:id="@+id/playlist_fab_play"
        style="@style/FabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/menu_play"
        android:tint="@color/white"
        app:layout_anchor="@id/playlist_appbar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_button_play_black"
        app:progressColor="@color/white"
        app:progressMargin="2dp"
        android:visibility="gone"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playlist_fab_playmode"
        style="@style/FabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:contentDescription="@null"
        android:tint="@color/white"
        app:fabSize="mini"
        app:layout_anchor="@id/playlist_appbar"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_playmode_shuffle"
        tools:ignore="RtlSymmetry"
        android:visibility="gone"

    />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
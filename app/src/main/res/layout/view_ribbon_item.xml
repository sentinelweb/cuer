<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:minWidth="64dp"
    android:background="@drawable/ic_ripple_item_background"
    android:layout_margin="2dp"
    android:padding="4dp"
>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ribbon_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_volume_up_24"
        app:tint="?colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ribbon_item_text"
    />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ribbon_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ribbon_item_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="1"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<uk.co.sentinelweb.cuer.app.ui.playlist.item.ItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    >

    <TextView
        android:id="@+id/swipe_label_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_600"
        android:text="@string/right"
        android:textColor="@color/white"
        android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/ic_item_tick_white"
        android:paddingLeft="@dimen/list_item_swipe_margin"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:alpha="0"
    />

    <TextView
        android:id="@+id/swipe_label_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_600"
        android:text="@string/left"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:gravity="right|center_vertical"
        android:drawableRight="@drawable/ic_item_delete_white"
        android:paddingRight="@dimen/list_item_swipe_margin"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:alpha="0"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_item_margin"
        android:background="@drawable/ic_ripple_item_background"
        android:elevation="@dimen/list_item_elevation"
        android:orientation="vertical"
        android:padding="@dimen/list_item_padding"
        >

        <ImageView
            android:id="@+id/listitem_icon"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:contentDescription="@null"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_player_play_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/listitem_icon_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_item_tick_white"
            android:tint="@color/green_700"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/listitem_icon"
            app:layout_constraintLeft_toLeftOf="@id/listitem_icon"
            />

        <View
            android:id="@+id/listitem_overflow_click"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/listitem_top"
            style="@style/ItemView.TopText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            app:layout_constraintLeft_toRightOf="@id/listitem_icon"
            app:layout_constraintRight_toLeftOf="@id/listitem_overflow_img"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/listitem_bottom"
            style="@style/ItemView.BottomText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@color/grey_600"
            app:layout_constraintLeft_toRightOf="@id/listitem_icon"
            app:layout_constraintRight_toLeftOf="@id/listitem_overflow_img"
            app:layout_constraintTop_toBottomOf="@id/listitem_top"
            />

        <ImageView
            android:id="@+id/listitem_overflow_img"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_more_vert_black"
            android:tint="@color/grey_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</uk.co.sentinelweb.cuer.app.ui.playlist.item.ItemView>